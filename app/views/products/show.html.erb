<div class="absolute w-full h-full">
    <div class="container mx-auto px-4 h-full">
        <div class="flex justify-center items-center content-center h-full">
            <div class="rounded-lg p-2 bg-slate-500">
                <%= image_tag @product.photo, class:'object-cover w-full h-64 rounded-lg' if @product.photo.attached? %>
                <div class="text-center">
                    <div class="p-2 rounded-lg bg-white my-2">
                        <h2> <%= @product.title %> </h2>
 
                        <h2> <%= @product.description %> </h2>
  
                        <h2> $<%= @product.price %> </h2>
                   </div>
                   <div class="p-2 rounded-lg bg-white my-2  hover:bg-gray-700 hover:text-white">
                        <h2> <%= link_to 'Editar Producto', edit_product_path(@product), class: 'block' if @product.owner? %> </h2>
                   </div>
                   <div class="p-2 rounded-lg bg-white my-2  hover:bg-gray-700 hover:text-white">
                        <h2> <%= link_to 'Eliminar Producto', product_path(@product), data: {
                        turbo_method: :delete,
                        turbo_confirm: '¿Estás Seguro?'
                        }, class: 'block' if @product.owner? %> </h2>
                    </div>

                    <div class="p-2 rounded-lg bg-white my-2  hover:bg-gray-700 hover:text-white">
                        <%= link_to "Ver mas productos de: #{@product.user.username}", user_path(@product.user.username), class: 'block' %>
                    </div>

                    <div class="p-2 rounded-lg bg-white my-2  hover:bg-gray-700 hover:text-white">
                        <%= render partial: 'favorite', locals: { product: @product } %>

                        <%# A la clase render no se le pueden aplicar estilos directamente %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>